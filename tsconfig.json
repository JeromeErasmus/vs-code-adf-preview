{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}