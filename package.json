{
  "name": "adf-preview",
  "displayName": "ADF Preview for Confluence",
  "description": "Preview and edit Atlassian Document Format (ADF) files with live Confluence-style rendering",
  "version": "0.3.2",
  "publisher": "jerome-erasmus",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "resources/icons/adf-icon.png",
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "adf",
    "atlassian",
    "confluence",
    "preview",
    "viewer",
    "json"
  ],
  "activationEvents": [
    "onCustomEditor:adf.preview",
    "onCommand:adf.openPreview",
    "onLanguage:json",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "adf.preview",
        "displayName": "ADF Preview",
        "selector": [
          {
            "filenamePattern": "*.adf",
            "priority": "option"
          },
          {
            "filenamePattern": "*.md",
            "priority": "option"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "adf.openPreview",
        "title": "Open Preview",
        "category": "ADF",
        "icon": "$(open-preview)"
      },
      {
        "command": "adf.closePreview",
        "title": "Close ADF Preview",
        "category": "ADF"
      },
      {
        "command": "adf.exportAsHTML",
        "title": "Export as HTML",
        "category": "ADF"
      },
      {
        "command": "adf.exportAsMarkdown",
        "title": "Export as Markdown",
        "category": "ADF"
      },
      {
        "command": "adf.validateDocument",
        "title": "Validate ADF Document",
        "category": "ADF"
      },
      {
        "command": "adf.test",
        "title": "Test Extension",
        "category": "ADF"
      },
      {
        "command": "adf.debugLog",
        "title": "Write Debug Log",
        "category": "ADF"
      },
      {
        "command": "adf.createMarkdownFromTemplate",
        "title": "Create from Template",
        "category": "ADF",
        "icon": "$(file-add)"
      }
    ],
    "grammars": [
      {
        "scopeName": "text.html.markdown.adf",
        "path": "./syntaxes/markdown-adf.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/markdown-adf.json"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "adf.openPreview",
          "when": "resourceExtname == .md",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "adf.exportAsHTML",
          "when": "activeCustomEditorId == adf.preview"
        },
        {
          "command": "adf.exportAsMarkdown",
          "when": "activeCustomEditorId == adf.preview"
        }
      ]
    },
    "configuration": {
      "title": "ADF Preview",
      "properties": {
        "adf.preview.theme": {
          "type": "string",
          "default": "light",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "description": "Theme for ADF preview"
        },
        "adf.preview.fontSize": {
          "type": "number",
          "default": 14,
          "description": "Font size for ADF preview"
        },
        "adf.preview.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update preview when document changes"
        },
        "adf.preview.updateDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before updating preview"
        },
        "adf.export.includeStyles": {
          "type": "boolean",
          "default": true,
          "description": "Include styles when exporting to HTML"
        },
        "adf.validation.strict": {
          "type": "boolean",
          "default": true,
          "description": "Use strict validation for ADF documents"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn build",
    "compile": "yarn compile:extension && yarn compile:webview",
    "compile:extension": "tsc -p ./",
    "compile:webview": "webpack --mode development",
    "watch": "concurrently \"yarn watch:extension\" \"yarn watch:webview\"",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "webpack --mode development --watch",
    "build": "yarn build:extension && yarn build:webview",
    "build:extension": "tsc -p ./",
    "build:webview": "webpack --mode production",
    "pretest": "yarn compile && yarn lint",
    "lint": "eslint src --ext ts,tsx",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "mocha --require ts-node/register --project tsconfig.test.json 'src/test/unit/**/*.test.ts'",
    "test:integration": "node dist/test/runTests.js",
    "test:watch": "mocha --require ts-node/register --project tsconfig.test.json 'src/test/unit/**/*.test.ts' --watch",
    "test:coverage": "nyc mocha --require ts-node/register --project tsconfig.test.json 'src/test/unit/**/*.test.ts'",
    "package": "@vscode/vsce package --out build/",
    "package:dev": "@vscode/vsce package --no-dependencies --no-yarn --out build/"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/events": "^3",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/path-browserify": "^1",
    "@types/punycode": "^2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^3.6.0",
    "assert": "^2.1.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "chai": "^4.5.0",
    "concurrently": "^8.2.0",
    "constants-browserify": "^1.0.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.8.1",
    "domain-browser": "^5.7.0",
    "eslint": "^8.41.0",
    "events": "^3.3.0",
    "glob": "^8.1.0",
    "html-webpack-plugin": "^5.5.3",
    "https-browserify": "^1.0.0",
    "mocha": "^10.8.2",
    "nyc": "^15.1.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "punycode": "^2.3.1",
    "querystring-es3": "^0.2.1",
    "sinon": "^21.0.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "string_decoder": "^1.3.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2",
    "vsce": "^2.15.0",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@atlaskit/adf-schema": "35.14.0",
    "@atlaskit/analytics-next": "^11.1.1",
    "@atlaskit/editor-common": "109.7.1",
    "@atlaskit/link-provider": "^4.0.0",
    "@atlaskit/media-client-react": "4.1.2",
    "@atlaskit/media-core": "37.0.0",
    "@atlaskit/media-state": "^1.8.0",
    "@atlaskit/renderer": "123.2.1",
    "@emotion/react": "11.14.0",
    "extended-markdown-adf-parser": "1.3.0",
    "markdown-it": "13.0.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-intl": "^7.1.11"
  }
}
